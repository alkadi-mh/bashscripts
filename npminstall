#!/bin/bash
# installing order matters


echo '///////////////////////////////////'
echo '/// NPM INSTALL: vistorian-core ///'
echo '///////////////////////////////////'

cd .. 
cd vistorian-core
npm install

echo '/////////////////////////////////////'
echo '/// NPM INSTALL: vistorian-matrix ///'
echo '/////////////////////////////////////'

cd ../vistorian-matrix
npm install

echo '///////////////////////////////////////'
echo '/// NPM INSTALL: vistorian-nodelink ///'
echo '///////////////////////////////////////'

cd ../vistorian-nodelink
npm install

echo '//////////////////////////////////'
echo '/// NPM INSTALL: vistorian-map ///'
echo '//////////////////////////////////'

cd ../vistorian-map
npm install

echo '/////////////////////////////////////////'
echo '/// NPM INSTALL: vistorian-dynamicego ///'
echo '/////////////////////////////////////////'

cd ../vistorian-dynamicego
npm install

echo '//////////////////////////////////////////////'
echo '/// NPM INSTALL: vistorian-bookmarkbrowser ///'
echo '//////////////////////////////////////////////'

cd ../vistorian-bookmarkbrowser
npm install

echo '//////////////////////////////////'
echo '/// NPM INSTALL: vistorian-web ///'
echo '//////////////////////////////////'

cd ../vistorian-web
npm install

# return to this folder
cd bashscripts
